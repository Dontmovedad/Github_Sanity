<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/multi_add_trans_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Transaction"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/multi_trans_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date" />

        <TextView
            android:id="@+id/multi_trans_date_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/multi_trans_date_button"
            android:layout_alignBottom="@+id/multi_trans_date_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:gravity="center"
            android:text="2017-10-10" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/multi_bgt_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/bgt_array"
        android:prompt="@string/bgt_prompt" />

    <Spinner
        android:id="@+id/multi_cat_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/cat_array"
        android:prompt="@string/cat_prompt" />

    <EditText
        android:id="@+id/multi_trans_amt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount here"
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/multi_trans_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Note" />

    <Button
        android:id="@+id/button_mutiTrans_Add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="ADD" />

</LinearLayout>

